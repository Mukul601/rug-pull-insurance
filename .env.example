# Environment Variables Template
# Copy this file to .env and fill in your values

# Private Key (required for deployment and transactions)
PRIVATE_KEY=

# Base RPC URLs (required for foundry.toml)
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# API Keys
ALCHEMY_API_KEY=your_alchemy_api_key_here
BASESCAN_API_KEY=your_basescan_api_key_here

# Contract Addresses
PREMIUM_TOKEN=0x...   # MockERC20 or USDC test token on Base Sepolia
PYTH_CONTRACT=0x4c5d8A75F3762c1561D96f177694f67378705E98  # Pyth on Base Sepolia
PRICE_ID=0xff61491a931112ddf1bd8147cd1b641375f79f5825126d665480874634fd0ace  # ETH/USD feed

# Wallet Address (for minting mock tokens)
WALLET_ADDRESS=0x...

# Bot Configuration (optional)
BOT_INTERVAL_MS=30000
BOT_MAX_RETRIES=3
BOT_TIMEOUT_MS=10000

# Alert Configuration (optional)
ALERT_WEBHOOK_URL=your_webhook_url_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
ALERT_EMAIL=your_email_here
